{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ren-logs",
  "version": "0.1.0",
  "identifier": "com.anror.ren-logs",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:2025",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Meter | Ren Logs",
        "userAgent": "Ren Logs App",
        "fullscreen": false,
        "width": 500,
        "height": 350,
        "resizable": true,
        "shadow": false,
        "decorations": false,
        "transparent": true,
        "minWidth": 300,
        "minHeight": 120,
        "alwaysOnTop": true,
        "visible": false,
        "focus": false,
        "useHttpsScheme": true
      },
      {
        "title": "Logs",
        "label": "logs",
        "url": "/logs",
        "fullscreen": false,
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "closable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src *; img-src 'self' https: data:; style-src 'self' 'unsafe-inline'; font-src 'self' data:; connect-src ipc: http://ipc.localhost"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "id": "main",
      "showMenuOnLeftClick": true
    }
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "WinDivert.dll",
      "WinDivert64.sys"
    ],

  }
}
